<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_cover_height"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:lines="2"
                android:paddingTop="@dimen/album_title_padding"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:textStyle="bold"
                android:textColor="#111"
                android:text="@string/new_arrivals"
                android:fontFamily="@font/raleway"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/code_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:lines="2"
                android:paddingTop="@dimen/card_title_padding"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:textColor="#1a237e"
                android:text="@string/new_arrivals"
                android:fontFamily="@font/raleway"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/ruppee_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toStartOf="@id/price"
                android:text="@string/rupees"
                android:layout_marginEnd="2dp"
                android:paddingTop="@dimen/card_title_padding"
                android:fontFamily="@font/raleway"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:paddingTop="@dimen/card_title_padding"
                android:fontFamily="@font/raleway"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
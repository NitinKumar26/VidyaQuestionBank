<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_5"
    android:fillViewport="true">

        <TextView
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorExcellentBookText"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/text_serial_number"
            android:padding="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_4"
            android:fontFamily="@font/raleway"
            tools:text="1."
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textUpdateTitle"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorExcellentBookText"
            android:ellipsize="end"
            android:padding="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_4"
            android:fontFamily="@font/raleway"
            tools:text="Nitin Kumar"
            android:textStyle="bold"
            android:layout_toEndOf="@id/text_serial_number" />

        <TextView
            android:id="@+id/desc"
            android:ellipsize="end"
            android:padding="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_below="@id/textUpdateTitle"
            tools:text="this is the description of the update item."/>


        <TextView
            android:id="@+id/know_more"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorExcellentBookText"
            android:ellipsize="end"
            android:padding="@dimen/margin_12"
            android:paddingBottom="@dimen/margin_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_below="@id/desc"
            android:layout_alignParentEnd="true"
            android:text="@string/know_more" />

    </RelativeLayout>


